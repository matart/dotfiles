[core]
	editor = nvim
[user]
	name = Mathew Artemenko
	email = mathew.artemenko@shopify.com
[push]
	default = current
[alias]
	r = reset --soft HEAD^1
	rhard = reset --hard HEAD^1
	ne = commit -a --amend --no-edit
	update = !git fetch && git pull
	force = push --force-with-lease
	amend = commit -a --amend
	conflicts = diff --name-only --diff-filter=U
	ls = ls-files
	addall = add -A .
	graph = log --graph -9 --branches --remotes --tags --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
	# rebase workflow
	mainbranch = "!git remote show origin | sed -n '/HEAD branch/s/.*: //p'"
	synced = "!git pull origin $(git mainbranch) --rebase"
        update = "!git pull origin $(git rev-parse --abbrev-ref HEAD) --rebase"
        squash = "!git rebase -v -i $(git mainbranch)"
        publish = push origin HEAD --force-with-lease
        pub = publish
[include]
