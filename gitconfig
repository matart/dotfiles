[push]
	default = current
[alias]
	r = reset --soft HEAD^1
	rhard = reset --hard HEAD^1
	ne = commit -a --amend --no-edit
	update = !git fetch && git pull
	force = push --force-with-lease
	amend = commit -a --amend
	conflicts = diff --name-only --diff-filter=U
